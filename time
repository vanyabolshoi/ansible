version: v1.0
name: Set Windows Time to Midnight

blocks:
  - name: Change time on Windows
    task:
      jobs:
        - name: Set time to 00:00
          commands:
            - ssh user@windows_host "powershell.exe -Command \"\$currentDate = Get-Date; Set-Date -Date (Get-Date -Year \$currentDate.Year -Month \$currentDate.Month -Day \$currentDate.Day -Hour 0 -Minute 0 -Second 0); Write-Output 'Time set to midnight'\""
