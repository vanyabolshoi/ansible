    - name: Configure GLPI-Agent server
      win_command: >
        "C:\\Program Files\\GLPI-Agent\\glpi-agent.bat"
        --server http://172.16.10.234/glpi/front/inventory.php
      args:
        chdir: "C:\\Program Files\\GLPI-Agent"

    - name: Enable GLPI-Agent service autostart
      win_service:
        name: GLPI-Agent
        start_mode: auto

    - name: Start GLPI-Agent service
      win_service:
        name: GLPI-Agent
        state: started

    - name: Force first inventory
      win_command: >
        "C:\\Program Files\\GLPI-Agent\\glpi-agent.bat"
        --server http://172.16.10.234/glpi/front/inventory.php
        --debug
