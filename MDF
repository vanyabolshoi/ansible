- name: Вывести IP и имя файла
  hosts: windows
  gather_facts: no

  tasks:
    - name: Найти файлы .mdf в C:\DataSQL
      win_find:
        paths: C:\DataSQL
        patterns: "*.mdf"
      register: mdf_files

    - name: Показать IP и имя файла
      ansible.builtin.debug:
        msg: "{{ inventory_hostname }} -> {{ item.filename }}"
      loop: "{{ mdf_files.files }}"
      loop_control:
        label: "{{ inventory_hostname }} -> {{ item.filename }}"
